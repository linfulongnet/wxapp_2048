/* pages/game/index.wxss */
page{
  font-size: 12px;
  height:100%;
}
.gameView{
  width:100%;
  height:100%;
}
.score{
    width:80%;
    line-height: 36px;
    margin:0 auto;
    font-size:20px;
}
.currentScore,.topScore{
  width:65%;
  margin:0 auto;
}
.lf{
  float:left;
}

.gridPanel{
  margin:0 auto;
  background-color:#bbada0;
  border-radius:10px;
  position:relative;
}
.grid,.cell{
  width:60px;
  height:60px;
  border-radius:6px;
}
.grid{
  background-color:#ccc0b3;
  float:left;
  margin:10px 0 0 10px;
}
.cell{
  position:absolute;
  font-size:60px;
  text-align:center;
  line-height:60px;
  color:#fff;
}
[id^="c0"]{top:10px}
[id^="c1"]{top:80px}
[id^="c2"]{top:150px}
[id^="c3"]{top:220px}
[id^="c4"]{top:290px}
[id^="c5"]{top:360px}

[id$="0"]{left:10px}
[id$="1"]{left:80px}
[id$="2"]{left:150px}
[id$="3"]{left:220px}
[id$="4"]{left:290px}
[id$="5"]{left:360px}


.n2{background-color:#eee3da}
.n4{background-color:#ede0c8}
.n8{background-color:#f2b179}
.n16{background-color:#f59563}
.n32{background-color:#f67c5f}
.n64{background-color:#f65e3b}
.n128{background-color:#edcf72}
.n256{background-color:#edcc61}
.n512{background-color:#9c0}
.n1024{background-color:#33b5e5}
.n2048{background-color:#09c}
.n4096{background-color:#a6c}
.n8192{background-color:#93c}
.n1024,.n2048,.n4096,.n8192{font-size:24px}
.n16,.n32,.n64{font-size:48px}
.n128,.n256,.n512{font-size:36px}
.n2,.n4{
  color:#555;
}


.gameOver{
  position:absolute;
  top:0;
  left:0;
  width:100%; 
  height:100%;
  z-index:1000;
}
.modalContent{
  font-size:28px;
}
.gameOverAlert{
    font-size:36px;
    margin:20px 0 6px 0;
}
.lastScore{
    font-size:24px;
    color:#f00;
    display:inline-block;
}
.bgModel{
  width:100%; 
  height:100%;
  background-color:#555;
  opacity:0.5;
}
.modalContent{
  position:absolute; 
  width:300px; 
  height:200px;
  top:50%; 
  left:50%;
  margin-top:-100px; 
  margin-left:-150px;
  background-color:#fff;
  text-align:center;
  line-height:1.5em;
  border-radius:10px;
  border:1px solid #edcf72;
}
.againBtn{
  width:80%;
  color:#fff;
  background-color:#9f8d77;
  border-radius:6px;
  margin-top:10px;
}

.gameCtrlGroup{
  width:150px;
  height:150px;
  margin:10px auto;
  text-align: center;
  transform:rotate(45deg);
}
.gameCtrl_item{
  margin:10px 0 0 10px;
}

